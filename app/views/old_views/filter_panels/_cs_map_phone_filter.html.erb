<div class="push-left ml-3 sidetoggle">
  <a id="simple-menu" onclick="$('#sidr').removeClass('vanish')" href="#sidr"><i class="fas fa-bars theme_color_dark text-xxlarge"></i></a>
</div>
<div id="sidr" class="vanish">
  <!-- Your content -->
  <div class="my-3 px-3 text-xbig b roboto" style="color: rgba(88, 88, 88, .9)">
      <%= @user.city.name if @user %>
      <%= @city.name unless @user %> 
      Feeds
  </div>
  <ul>
    <li class="text-18">
      <%= link_to "Community Score", city_feed_path(@city), id: "cs_ms", class: " ml-0theme_color_dark", title: "Your city, your score", style: "opacity: 0.95" if @city %>
      <%= link_to "Community Score",  city_feed_path(current_user_or_admin.city), id: "cs_ms", class: "ml-0 theme_color_dark", title: "Your city, your score", style: "opacity: 0.95" unless @city %>
    </li>
    <li class="text-18">
      <%= link_to "Ossembly Forum", city_ossembly_path(@city), id: "ossembly_link", class: "theme_color_dark", title: "Your forum for local engagement", style: "opacity: 0.95" if @city %>
      <%= link_to "Ossembly Forum", city_feed_path(current_user_or_admin.city), id: "ossembly_link", class: "theme_color_dark", title: "Your forum for local engagement", style: "opacity: 0.95" unless @city %>
    </li>
    <!-- The Beacon Link Code <div>%= link_to "The Beacon", '#', id: "beacon_link", class: "nav-link theme_color_dark navbar_item_link px-3 margin-l-0", data: { confirm: "The Beacon feature is coming soon!"} unless is_guest_page? && is_guest? %></div> -->
  </ul>
  <div class="my-3 px-3 text-xbig b roboto" style="color: rgba(88, 88, 88, .9)">
    Scores
  </div>
  <ul>
  <% if current_page?(controller: 'community_scores', action: 'community_score_map') ||  current_page?(controller: 'complaints', action: 'complaint_map') || current_page?(controller: 'complaints', action: 'verifying_map') || current_page?(controller: 'complaints', action: 'pending_map') || current_page?(controller: 'complaints', action: 'filed_map')|| current_page?(controller: 'complaints', action: 'finished_map')  %>
    <li class="">
      <a class="" href="<%= complaint_map_path(@city) %>"><i class="fas fa-map-marked margin-l-10 margin-r-8"></i>All Complaints</a>
    </li>
    <li class="">
      <a class="" href="<%= verifying_map_path(@city) %>"><i class="fas fa-exclamation-triangle margin-l-8 margin-r-8"></i>Confirmed Complaints</a>
    </li>
    <li class="">
      <a class="" href="<%= pending_map_path(@city) %>"><i class="far fa-arrow-alt-circle-up margin-l-8" style="margin-right: 11px"></i>Endorsed Complaints</a>
    </li>
    <li class="">
      <a class="" href="<%= filed_map_path(@city) %>"><i class="far fa-envelope margin-l-8" style="margin-right: 11px"></i>Filed Complaints</a>
    </li>
    <li class="">
      <a class="" href="<%= finished_map_path(@city) %>"><i class="fas fa-percent margin-l-8" style="margin-right: 12px"></i>Scored Complaints</a>
    </li>
  <% end %>
  </ul>
</div>

<script>
  $('#simple-menu').sidr();
  $("#simple-menu").onClick(function(){
    $("#sidr").removeClass("vanish");
  });

</script>