<div class="push-left ml-3 sidetoggle">
  <a id="simple-menu" onclick="$('#sidr').removeClass('vanish')" href="#sidr"><i class="fas fa-bars theme_color_dark text-xxlarge"></i></a>
</div>
<div id="sidr" class="vanish">
  <!-- Your content -->
  <div class="my-3 px-3 text-xbig b roboto" style="color: rgba(88, 88, 88, .9)">
      <%= @user.city.name if @user %>
      <%= @city.name unless @user %> 
      Feeds
  </div>
  <ul>
    <li class="text-18">
      <%= link_to "Community Score", city_feed_path(@city), id: "cs_ms", class: " ml-0theme_color_dark", title: "Your city, your score", style: "opacity: 0.95" if @city %>
      <%= link_to "Community Score",  city_feed_path(current_user_or_admin.city), id: "cs_ms", class: "ml-0 theme_color_dark", title: "Your city, your score", style: "opacity: 0.95" unless @city %>
    </li>
    <li class="text-18">
      <%= link_to "Ossembly Forum", city_ossembly_path(@city), id: "ossembly_link", class: "theme_color_dark", title: "Your forum for local engagement", style: "opacity: 0.95" if @city %>
      <%= link_to "Ossembly Forum", city_feed_path(current_user_or_admin.city), id: "ossembly_link", class: "theme_color_dark", title: "Your forum for local engagement", style: "opacity: 0.95" unless @city %>
    </li>
    <!-- The Beacon Link Code <div>%= link_to "The Beacon", '#', id: "beacon_link", class: "nav-link theme_color_dark navbar_item_link px-3 margin-l-0", data: { confirm: "The Beacon feature is coming soon!"} unless is_guest_page? && is_guest? %></div> -->
  </ul>
  <div class="my-3 px-3 text-xbig b roboto" style="color: rgba(88, 88, 88, .9)">
    Conversations
  </div>
 
  <ul>
    <!-- Below -  If user is in lets talk topic page, shows only let's talk subtopics on filter panel. -->
    <% if current_page?(city_topic_path(@city, @lets_talk)) || current_page?(subtopic_path(@city, @lets_talk, @help_out)) || current_page?(subtopic_path(@city, @lets_talk, @business_buzz)) || current_page?(subtopic_path(@city, @lets_talk, @grinds_gears)) || current_page?(subtopic_path(@city, @lets_talk, @sports)) %>
      <li class="">
        <%= link_to "<i class='fas fa-bullhorn margin-l-8 margin-r-10'></i>All Let's Talk".html_safe, city_topic_path(@city, @lets_talk), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-handshake margin-l-8' style='margin-right: 7px'></i>Help Me Out".html_safe, subtopic_path(@city, @lets_talk, @help_out), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-building margin-l-8' style='margin-right: 14px'></i>Business Buzz".html_safe, subtopic_path(@city, @lets_talk, @business_buzz), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fab fa-whmcs margin-l-8' style='margin-right: 13px'></i>Grinds My Gears".html_safe, subtopic_path(@city, @lets_talk, @grinds_gears), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-football-ball margin-l-8' style='margin-right: 12px'></i>Sports".html_safe, subtopic_path(@city, @lets_talk, @sports), class: "" %>
      </li>
    <!-- Below -  If user is in good vibes topic page, shows only good vibes subtopics on filter panel. -->
    <% elsif current_page?(city_topic_path(@city, @good_vibes)) || current_page?(subtopic_path(@city, @good_vibes, @good_news)) || current_page?(subtopic_path(@city, @good_vibes, @furry_friends)) || current_page?(subtopic_path(@city, @good_vibes, @city_snaps)) || current_page?(subtopic_path(@city, @good_vibes, @local_historian)) %>
      <li class="">
        <%= link_to "<i class='fas fa-dove margin-l-8 margin-r-12'></i>All Good Vibes".html_safe, city_topic_path(@city, @good_vibes), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-smile margin-l-8 margin-r-12'></i>Good News".html_safe, subtopic_path(@city, @good_vibes, @good_news), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='icon ion-logo-octocat margin-l-8' style='margin-right: 14px'></i>Furry Friends".html_safe, subtopic_path(@city, @good_vibes, @furry_friends), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-camera-retro margin-l-8 margin-r-12'></i>City Snaps".html_safe, subtopic_path(@city, @good_vibes, @city_snaps), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-atlas margin-l-8' style='margin-right: 14px'></i>Local Historian".html_safe, subtopic_path(@city, @good_vibes, @local_historian), class: "" %>
      </li>
    <!-- Below -  If user is in City Affairs topic page, shows only City Affairs subtopics on filter panel. -->
    <% elsif current_page?(city_topic_path(@city, @city_affairs)) || current_page?(subtopic_path(@city, @city_affairs, @ballots)) || current_page?(subtopic_path(@city, @city_affairs, @events)) || current_page?(subtopic_path(@city, @city_affairs, @city_improvements)) || current_page?(subtopic_path(@city, @city_affairs, @schools)) %>
       <li class="">
        <%= link_to "<i class='fas fa-gavel margin-l-8 margin-r-12'></i>All City Affairs".html_safe, city_topic_path(@city, @city_affairs), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-newspaper margin-l-8' style='margin-right: 10px'></i>Ballots".html_safe, subtopic_path(@city, @city_affairs, @ballots), class: "" %>
      </li>    
      <li class="">
        <%= link_to "<i class='fas fa-calendar-alt margin-l-8' style='margin-right: 14px'></i>Events".html_safe, subtopic_path(@city, @city_affairs, @events), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-pallet margin-l-8' style='margin-right: 8px'></i>City Improvements".html_safe, subtopic_path(@city, @city_affairs, @city_improvements), class: "" %>
      </li>
      <li class="">
        <%= link_to "<i class='fas fa-school margin-l-8 ms_t_panel_head' style='margin-right: 8px'></i>Schools".html_safe, subtopic_path(@city, @city_affairs, @schools), class: "" %>
      </li>
    <!-- Below -  If user is in Petitions topic page, shows only Petitions subtopics on filter panel. -->
    <% elsif current_page?(city_topic_path(@city, @petitions)) %>
      <li class="">
        <a class="" href="#" data-confirm="Petitions Feature coming soon!"><i class="fas fa-clipboard margin-l-8" style='margin-right: 14px'></i>All Petitions</a>
      </li>
      <li class="">
        <a class="" href="#" data-confirm="Petitions Feature coming soon!"><i class="fas fa-hourglass margin-l-8" style='margin-right: 16px'></i>Recent</a>
      </li>
      <li class="">
        <a class="" href="#" data-confirm="Petitions Feature coming soon!"><i class="fas fa-chevron-up margin-l-8" style='margin-right: 14px'></i>Trending</a>
      </li>
      <li class="">
        <a class="" href="#" data-confirm="Petitions Feature coming soon!"><i class="fas fa-envelope-square margin-l-8" style='margin-right: 14px'></i>Filed</a>
      </li>
    <% end %>
  </ul>
</div>


<script>
// Code for clicks and vanishes of the sidebar filter panel.
  <% if obj == @week_topic_posts %>
    <%= render "layouts/click_phone_filter" %>
  <% elsif obj == @week_subtopic_posts %>
    $('#simple-menu').sidr();
  <% end %>
</script>